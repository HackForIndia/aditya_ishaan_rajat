<head>
  <title>EduHub</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
	<p class="btn btn-default"><%= link_to current_user.name, root_path %></p>
	<%= link_to "Log out", logout_path, method: "delete" , class: "btn btn-default"%>
<% else %>
	<%= link_to "Log In", login_path, method: "post", class: "btn btn-default" %>
<% end %>
<% if flash[:notice] %>
	<p><%= flash[:notice] %></p>
<% end %>
<%= link_to "Create a page Today!", new_page_path, class: "btn btn-default" %>
<%= yield %>

</body>
</html>
