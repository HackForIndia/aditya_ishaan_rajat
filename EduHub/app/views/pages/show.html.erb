<%- model_class = Page -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:question) %>:</strong></dt>
  <dd><%= @page.question %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd><%= @page.notes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:upvotes) %>:</strong></dt>
  <dd><%= @page.upvotes %></dd>
  <dt><strong><%= model_class.human_attribute_name(:audio_notes) %>:</strong></dt>
  <dd><audio src='<%= audio_path "output#{@page.id}"%>' type="audio/mpeg" controls>
    Your browser does not support the audio element.
    </audio>
  </dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              pages_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_page_path(@page), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              page_path(@page),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
