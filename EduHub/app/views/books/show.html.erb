<%- model_class = Book -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @book.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cluster) %>:</strong></dt>
  <dd><%= @book.cluster %></dd>
  <dt><strong><%= model_class.human_attribute_name(:made_by) %>:</strong></dt>
  <dd><%= @book.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pages) %>:</strong></dt>
  <div class="dl-horizontal">
    <p>Here are your personality insights!</p>
    <%= flash[:notice] %>
  </div>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              books_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_book_path(@book), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              book_path(@book),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

